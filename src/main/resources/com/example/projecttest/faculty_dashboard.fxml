<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.FacultyController" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">

    <!-- Faculty Dashboard View -->
    <VBox fx:id="dashboardView" alignment="CENTER" spacing="20">
        <Label text="Faculty Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <!-- Button for Add Faculty (opens the form) -->
        <Button text="Add Faculty" onAction="#handleAddFaculty" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <!-- Additional buttons for managing other faculty-related tasks -->
        <Button text="Edit Faculty" onAction="#handleEditFaculty" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #FF9800; -fx-text-fill: white;" />
        <Button text="Delete Faculty" onAction="#handleDeleteFaculty" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #F44336; -fx-text-fill: white;" />
        <Button text="View Faculty Profiles" onAction="#handleViewFacultyProfiles" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Assign Courses" onAction="#handleAssignCourses" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #9C27B0; -fx-text-fill: white;" />
        <Button text="View Reports" onAction="#handleViewReports" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #673AB7; -fx-text-fill: white;" />
    </VBox>

    <!-- Add Faculty Form (initially hidden) -->
    <VBox fx:id="addFacultyForm" alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" visible="false">

        <!-- Form Fields for Faculty Details -->
        <Label text="Faculty ID" />
        <TextField fx:id="idField" promptText="Enter Faculty ID" style="-fx-pref-width: 300px;" />

        <Label text="Name" />
        <TextField fx:id="nameField" promptText="Enter Faculty Name" style="-fx-pref-width: 300px;" />

        <Label text="Degree" />
        <TextField fx:id="degreeField" promptText="Enter Degree" style="-fx-pref-width: 300px;" />

        <Label text="Research Interest" />
        <TextField fx:id="researchInterestField" promptText="Enter Research Interest" style="-fx-pref-width: 300px;" />

        <Label text="Email" />
        <TextField fx:id="emailField" promptText="Enter Email" style="-fx-pref-width: 300px;" />

        <Label text="Office Location" />
        <TextField fx:id="officeLocationField" promptText="Enter Office Location" style="-fx-pref-width: 300px;" />

        <!-- Save Button -->
        <Button text="Save Faculty" onAction="#handleSaveFaculty" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <!-- Back to Dashboard Button -->
        <Button text="Back to Dashboard" onAction="#handleBackToDashboard" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #FF5722; -fx-text-fill: white;" />
    </VBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
</VBox>
